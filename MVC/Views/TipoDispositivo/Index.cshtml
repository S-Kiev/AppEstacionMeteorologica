@model  IEnumerable<Dominio.Entidades.TipoDispositivo>
@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
    ViewData["Title"] = "Index";
}

<h1>Tipo de dispositivos</h1>

<p>
    <a asp-action="Alta">Agreagar nuevo</a>
</p>

<table class="table table-bordered table-striped">
    <thead>
        <tr>
            <th>@Html.DisplayNameFor(m => m.Nombre)</th>
            <th>@Html.DisplayNameFor(m=>m.Descripcion)</th>
            <th></th>
        </tr>
    </thead>
    <tdbody>
        @foreach(var i in Model)
        {
            <tr>
                <td>@Html.DisplayFor(mi=>i.Nombre)</td>
                <td>@Html.DisplayFor(mi=>i.Descripcion)</td>
                <td>
                    <a asp-action="Editar" asp-route-id="@i.Id">Editar</a>
                    <a asp-action="Detalles" asp-route-id="@i.Id">Detalles</a>
                    <a asp-action="Eliminar" asp-route-id="@i.Id">Eliminar</a>
               </td>
            </tr>
        }
    </tdbody>
</table>