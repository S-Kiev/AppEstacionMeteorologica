@model Dominio.Entidades.Dispositivo

@{
    ViewData["Title"] = "Editar";
}

<h1>Editar</h1>

<h4>Dispositivo</h4>
<hr />
<div class="row">
    <div class="col-md-4">
<form asp-action="Editar" method="post" asp-controller="Dispositivo">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Nombre" class="control-label"></label>
                <input asp-for="Nombre" class="form-control" />
                <span asp-validation-for="Nombre" class="text-danger"></span>
            </div>
            <div class="form-group custom-control custom-switch">
                <input type="checkbox" class="form-control custom-control-input" asp-for="Estado">
                <label class="control-label custom-control-label" asp-for="Estado">Activo</label>
            </div>

            <div class="form-group">
                <label asp-for="IdEstacion" class="control-label">Estaciones</label>
                <select class="form-control" asp-for="IdEstacion" asp-items="@(new SelectList(ViewBag.Estaciones,"Id","Nombre"))">
                </select>
            </div>

            <div class="form-group">
                <label asp-for="IdTipo" class="control-label">Tipo de Dispositivo</label>
                <select class="form-control" asp-for="IdTipo" asp-items="@(new SelectList(ViewBag.TipoDispositivos,"Id","Nombre"))">
                </select>
            </div>

              <div class="form-group">
                <label asp-for="Detalle">Detalle</label>
                 <textarea class="form-control" asp-for="Detalle" rows="3" placeholder="Hasta 500 caracteres"></textarea>
             </div>

            <div class="form-group">
                <input type="submit" value="Editar" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Volver</a>
</div>