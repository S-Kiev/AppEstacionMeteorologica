@model Dominio.Entidades.Usuario
@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
    Layout = null;
}

<html>
	<link href="//netdna.bootstrapcdn.com/twitter-bootstrap/2.3.2/css/bootstrap-combined.min.css" rel="stylesheet" id="bootstrap-css">


    <div class="container">
    <div class="row">
		<div class="span12">
			<form class="form-horizontal" asp-action="Login" asp-controller="Autentificacion" method="POST">
			  <fieldset>
			    <div id="legend">
			      <legend class="">Login</legend>
			    </div>
			    <div class="control-group">
			      <!-- Username -->
			      <label class="control-label"  asp-for="NomUsuario">Usuario</label>
			      <div class="controls">
			        <input type="text" asp-for="NomUsuario" class="input-xlarge">
			      </div>
			    </div>
			    <div class="control-group">
			      <!-- Password-->
			      <label class="control-label" asp-for="Pass">Contraseña</label>
			      <div class="controls">
			        <input type="password" asp-for="Pass" class="input-xlarge">
			      </div>
			    </div>
			    <div class="control-group">
			      <!-- Button -->
			      <div class="controls">
			        <button class="btn btn-success">Ingresar</button>
			      </div>
			    </div>
			  </fieldset>
			  <div asp-validation-summary="ModelOnly" class="text-danger"></div>

			</form>
		</div>
	</div>
</div>
</html>
